<div class="row">
	<div class="col-md-offset-2 col-md-3">
		<h2>会員一覧</h2>
	</div>
</div>
<div class="row pt-30">
	<div class="col-md-offset-3 col-md-6">
		<table class="table">
			<therd>
				<tr class="active">
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
				<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
					<td><%= customer.email %></td>
					<td>
						<% if customer.is_deleted? %>
							<span>無効</span>
						<% else %>
							<span>有効</span>
						<% end %>
					</td>
				</tr>
				<% end %>
			</therd>
		</table>
	</div>
</div>
