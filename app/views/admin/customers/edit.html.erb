<div class="row">
	<div class="col-md-offset-1 col-md-3">
		<%= "#{@customer.first_name}#{@customer.last_name}の会員詳細" %>
	</div>
</div>
<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<%= form_for admin_customer_path, html: { method: :patch } do |f| %>
		<table>
			<tr>
				<th><%= f.label "氏名" %></th>
				<td>
					<div class="form-group form-inline">
						<%= f.text_field :first_name, class:"form-control" %>
						<%= f.text_field :last_name, class:"form-control" %>
					</div>
				</td>
			</tr>
			<tr>
				<th><%= f.label "フリガナ" %></th>
				<td>
					<div class="form-group form-inline">
						<%= f.text_field :first_name_kana, class:"form-control" %>
						<%= f.text_field :last_name_kana, class:"form-control" %>
					</div>
				</td>
			</tr>
			<tr>
				<th><%= f.label "郵便番号" %></th>
				<td>
					<%= f.text_field :postcode, class:"form-control" %>
				</td>
			</tr>
			<tr>
				<th><%= f.label "住所" %></th>
				<td>
					<%= f.text_field :address, class:"form-control" %>
				</td>
			</tr>
			<tr>
				<th><%= f.label "電話番号" %></th>
				<td>
					<%= f.text_field :phone_number, class:"form-control" %>
				</td>
			</tr>
			<tr>
				<th><%= f.label "メールアドレス" %></th>
				<td>
					<%= f.text_field :email, class:"form-control" %>
				</td>
			</tr>
			<tr>
				<th><%= f.label "会員ステータス" %></th>
				<td>
					<%= f.radio_button :is_deleted, true %>有効
					<%= f.radio_button :is_deleted, false %>退会済み
				</td>
			</tr>
		</table>
		<%= f.submit "変更を保存する", class:"btn btn-primary" %>
		<% end %>
	</div>
</div>
