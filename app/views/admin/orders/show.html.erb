<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<h2>注文履歴詳細</h2>
		<%= form_for @order, url:admin_order_status_path(@order) do |f| %>
		<table>
			<tr>
				<th>購入者</th>
				<td><%= @order.customer.full_name %></td>
			</tr>
			<tr>
				<th>配送先</th>
				<td><%= @order.address_all %></td>
			</tr>
			<tr>
				<th>支払い方法</th>
				<td><%= @order.payment_method %></td>
			</tr>
			<tr>
				<th>注文ステータス</th>
				<td><%= f.select(:status, {入金待ち: "入金待ち", 入金確認: "入金確認", 製作中: "製作中",発送準備: "発送準備中", 発送済み: "発送済み"}, { class: "form_status__select" }) %></td>
				<td><%= f.submit "更新" %></td>
			</tr>
		</table>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-md-offset-1 col-md-7">
		<table class="table">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価（税込）</th>
					<th>数量</th>
					<th>小計</th>
					<th>製作ステータス</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @order.ordered_items.each do |ordered_item| %>
				<tr>
					<td><%= ordered_item.item.name %></td>
					<td><%= ordered_item.price %></td>
					<td><%= ordered_item.quantity %></td>
					<td><%= ordered_item.subtotal %></td>
					<td>
						<%= form_for(ordered_item, url:admin_production_status_path(ordered_item.id), html: {method: :patch}) do |f| %>
						<%= f.select(:production_status, {製作不可: "製作不可", 製作待ち: "製作待ち", 製作中: "製作中", 製作完了: "製作完了" }) %>
						<%= f.submit "更新" %>
					</td>
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-4">
		<table>
			<tr>
				<th>商品合計</th>
				<td><%= @order.total_payment - @order.shipping_cost %></td>
			</tr>
			<tr>
				<th>送料</th>
				<td><%= @order.shipping_cost %></td>
			</tr>
			<tr>
				<th>請求額合計</th>
				<td><%= @order.total_payment %></td>
		</table>
	</tr>
</table>