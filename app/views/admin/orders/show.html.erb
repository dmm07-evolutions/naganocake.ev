<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<h2>注文履歴詳細</h2>
		<table>
			<tr>
				<th>購入者</th>
				<td><%= @order.customer.full_name %></td>
			</tr>
			<tr>
				<th>配送先</th>
				<td><%= @order.address_all %></td>
			</tr>
			<tr>
				<th>支払い方法</th>
				<td><%= @order.payment_method %></td>
			</tr>
			<tr>
				<th>注文ステータス</th>
				<td><%= @order.status %></td>
			</tr>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-md-offset-1 col-md-7">
		<table class="table">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価（税込）</th>
					<th>数量</th>
					<th>小計</th>
					<th>制作ステータス</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @order.ordered_items.each do |ordered_item| %>
				<tr>
					<td><%= ordered_item.item.name %></td>
					<td><%= ordered_item.price %></td>
					<td><%= ordered_item.quantity %></td>
					<td><%= ordered_item.subtotal %></td>
					<%= form_for(ordered_item, url:admin_order_path(ordered_item.id), html: {method: :patch}) do |f| %>
					<td><%= f.select :production_status, [["制作不可", 0],["制作待ち", 1],["製作中", 2],["制作完了", 3]] %></td>
					<td><%= f.submit "更新" %></td>
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-4">
		<table>
			<tr>
				<th>商品合計</th>
				<td><%= @order.total_payment - @order.shipping_cost %></td>
			</tr>
			<tr>
				<th>送料</th>
				<td><%= @order.shipping_cost %></td>
			</tr>
			<tr>
				<th>請求額合計</th>
				<td><%= @order.total_payment %></td>
		</table>
	</tr>
</table>