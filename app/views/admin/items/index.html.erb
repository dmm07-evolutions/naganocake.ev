	<div class="row">
		<h3>商品一覧</h3>
		    <p><%= link_to "+", new_admin_item_path, class: "col-xs-12 btn .btn-default" %></p>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜き価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
				<tr>
					<td><%= item.id %></td>
					<td><%= link_to item.name, admin_item_path(item) %></td>
					<td><%= item.price %></td>
					<td><%= item.genre.name %></td>
					<td><%= item.status_text %></td>
				</tr>
				<% end %>
				</tbody>
			</table>
		</div>

<%= paginate @items %>
