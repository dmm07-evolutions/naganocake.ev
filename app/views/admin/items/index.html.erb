
	<div class="row">
		<h3>商品一覧</h3>
                <h1 class="col-xs-offset-11"><%= link_to new_admin_item_path do %>
		    	<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
		    	<% end %></h1>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜き価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
				<tr>
					<td><%= item.id %></td>
					<td><%= link_to item.name, admin_item_path(item) %></td>
					<td><%= item.price %></td>
					<td><%= item.genre.name %></td>
					<td><%= item.status_text %></td>
					<td><%= link_to "削除", admin_item_path(item), method: :delete, class:"btn btn-danger" %></td>
				</tr>
				<% end %>
				</tbody>
			</table>
		</div>

<%= paginate @items %>
