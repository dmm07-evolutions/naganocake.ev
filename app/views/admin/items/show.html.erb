	<div class="row">
		<h3>商品詳細</h3>
		<div class="col-md-4">
			<%= attachment_image_tag(@item, :img, :fill, 200, 150) %>
		<div class="col-md-4">
			<p>商品名</p>
			<%= @item.name %>

			<p>商品説明</p>
			<%= @item.explanation %>

			<p>ジャンル</p>
			<%= @item.genre.name %>

			<p>税込価格（税抜価格）</p>
			<%= "#{(BigDecimal(@item.price)) * (BigDecimal("1.08"))}円" %><%= "(#{@item.price}円)" %>
			<!-- 税込み価格の.0時間があれば消す -->

			<p>販売ステータス</p>
			<%= @item.status_text %>

</div>
<%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary col-md-3" %>

</div>
</div>