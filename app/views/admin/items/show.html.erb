	<div class="row">
		<h3>商品詳細</h3>
		<div class="col-md-4">
			<%= attachment_image_tag(@item, :img, :fill, 200, 150) %>
		</div>

        <div class="col-md-4">
			<p class="lead">商品名</p>
			<%= @item.name %>


			<p class="lead">商品説明</p>
			<%= @item.explanation %>

			<p class="lead">ジャンル</p>
			<%= @item.genre.name %>

			<p class="lead">税込価格（税抜価格)</p>
			<%= "#{(BigDecimal(@item.price)) * (BigDecimal("1.08"))}円" %><%= "(#{@item.price}円)" %>
			<!-- 税込み価格の.0時間があれば消す -->

			<p class="lead">販売ステータス</p>
			<%= @item.status_text %>

        </div>
    </div>
    <div class="col-xs-offset-9 col-md-3 submitbtn">
    	<div data-turbolinks="false">
			<%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
		</div>
	</div>


</div>