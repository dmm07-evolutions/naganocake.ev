<h1>ジャンル一覧・追加</h1>


<%= form_for @genre, url: admin_genres_path do |f| %>
    <h4>ジャンル</h4>
    <%= f.text_field :name %>

    <label><%= f.radio_button :is_active, true %>有効</label>
    <label><%= f.radio_button :is_active, false %>無効</label>

    <%= f.submit '追加' %>
<% end %>


<% @genres.each do |genre| %>
    <%= genre.name %>
    <% if genre.is_active? %>
        <p>有効</p>
    <% else %>
        <p>無効</p>
    <% end %>
    <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
<% end %>