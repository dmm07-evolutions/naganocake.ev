<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h4>ジャンル一覧・追加</h4>


         <div class="genre-name">
         	<%= form_for @genre, url: admin_genres_path do |f| %>
                <h4>ジャンル</h4>
                <label><%= f.text_field :name %></label>

                <label><%= f.radio_button :is_active, true %>有効</label>
                <label><%= f.radio_button :is_active, false %>無効</label>

            <%= f.submit '追加', class: "btn btn-info" %>
            <% end %>
        </div>


        <table class="table">
        	<thead>
        		<tr>
        			<th>ジャンル</th>
        			<th>状態</th>
        			<th></th>
        		</tr>
        	</thead>
        	<tbody>
        	    <% @genres.each do |genre| %>
        	    <tr>
                    <td><%= genre.name %></td>
                    <% if genre.is_active? %>
                        <td>有効</td>
                    <% else %>
                        <td>無効</td>
                    <% end %>
                    <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</div>