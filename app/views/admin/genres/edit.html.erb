<h1>ジャンル編集</h1>

<%= form_for(@genre, url:"/admin/genres/#{@genre.id}", html: {method: "patch"}) do |f| %>
    <h4>ジャンル</h4>
    <%= f.text_field :name %>

    <label><%= f.radio_button :is_active, true %>有効</label>
    <label><%= f.radio_button :is_active, false %>無効</label>

    <%= f.submit '変更を保存する' %>
<% end %>
