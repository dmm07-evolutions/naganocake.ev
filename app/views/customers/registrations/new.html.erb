<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-4">
      <h3>新規会員登録</h3>
    </div>
  </div>
  
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :first_name, "名前", class:"col-md-offset-2 col-md-1 label-control" %>
      <div class="form-inline">
        <div class="col-md-4">
          <%= f.label :first_name, "（姓）", class:"label-control" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
        </div>
        <div class="col-md-4">
          <%= f.label :last_name, "（名）", class:"label-control" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :first_name_kana, "フリガナ", class:"col-md-offset-2 col-md-1 control-label" %>
      <div class="form-inline">
        <div class="col-md-4">
          <%= f.label :first_name_kana, "（カナ）", class:"col-md-2 control-label" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"col-md-3 form-control" %>
        </div>
        <div class="col-md-4">
          <%= f.label :last_name_kana, "（カナ）", class:"col-md-2 control-label" %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"col-md-3 form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", class:"col-md-3 control-label" %>
      <div class="col-md-offset-1 col-md-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :postcode, "郵便番号（ハイフンなし）", class:"col-md-3 control-label" %>
      <div class="col-md-offset-1 col-md-6">
      <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :address, "住所", class:"col-md-3 control-label" %>
      <div class="col-md-offset-1 col-md-6">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, "電話番号（ハイフンなし）", class:"col-md-3 control-label" %>
      <div class="col-md-offset-1 col-md-6">
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class:"col-md-3 control-label" %>
      <div class="col-md-offset-1 col-md-6">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class:"col-md-3 control-label" %>
      <div class="col-md-offset-1 col-md-6">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>

    <div class="actions ">
      <%= f.submit "新規会員登録", class:"btn btn-success center-block" %>
    </div>
  <% end %>

  <%= render "customers/shared/links" %>
  
</div>
