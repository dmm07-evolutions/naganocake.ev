
<div class="item">
	<h3>検索商品一覧(全<%= @items.count %>件)</h3>
        <% @items.each do |item| %>
            <%= link_to item_path(item) do %>
                <%=attachment_image_tag(item,:img ,:fill,150,150,fallback:"noimg.jpg",size:"250x250") %>
                <%= item.name %>
                <%= item.price %>円
            <% end %>
        <% end %>
</div>