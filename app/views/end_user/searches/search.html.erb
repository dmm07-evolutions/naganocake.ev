<div class="row">
	<div class="col-md-offset-1 col-md-10 bg-white radius">
		<h3>検索商品一覧(全<%= @items.count %>件)</h3>
        <div class="items">
            <% @items.each do |item| %>
                <div class="item">
                    <%= link_to item_path(item) do %>
                        <%=attachment_image_tag(item,:img ,:fill,150,150,fallback:"noimg.jpg",size:"250x250") %><br>
                        <%= item.name %>
                        <%= item.price %>円
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>