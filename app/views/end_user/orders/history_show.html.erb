<div class="row order-histry-back">
	<div class="col-md-10 col-md-offset-1">
		<h1>注文履歴詳細</h1>
	</div>

	<div class="col-md-6 md-offset-1 top">
		<strong> &ensp; 注文情報</strong>
		<table class="table">
			<tr>
				<th>注文日</th>
				<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
			</tr>
			<tr>
				<th>配送先</th>
				<td><%= @order.address %></td>
			</tr>
			<tr>
				<th>支払方法</th>
				<td><%= @order.payment_method %></td>
            </tr>
            <tr>
				<th>ステータス</th>
				<td><%= @order.status %></td>
			</tr>
		</table>
	</div>
	<div class="col-md-3 md-offset-1 top2">
		<strong> &ensp; 請求情報</strong>
	    <table class="table">
			<tr>
				<th>商品合計</th>
				<% @total = @order.total_payment - @postage %>
				<td><%= @total.to_s(:delimited) %></td>
			</tr>
			<tr>
				<th>配送料</th>
				<td><%= @postage.to_s(:delimited) %></td>
			</tr>
			<tr>
				<th>ご請求金額</th>
				<td><%= @order.total_payment.to_s(:delimited) %></td>
			</tr>
		</table>
	</div>
	<div class="col-md-8 col-md-offset-1">
		<strong>注文内容</strong>
		<table class="table">
			<thead>
			    <tr>
				    <th>商品</th>
				    <th>単価(税込)</th>
				    <th>個数</th>
				    <th>小計</th>
			    </tr>
			</thead>
			<tbody>
			    <% @order.ordered_items.each do |ordered_item| %>
			    <tr>
			    	<td><%= ordered_item.item.name %></td>
			    	<td><%= ordered_item.price.to_s(:delimited) %></td>
			    	<td><%= ordered_item.quantity %></td>
			    	<td><%= ordered_item.subtotal.to_s(:delimited) %></td>
			    </tr>
			    <% end %>
			</tbody>
		</table>
	</div>
</div>

