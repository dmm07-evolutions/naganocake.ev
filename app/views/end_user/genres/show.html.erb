<div class="row">
    <div class="col-offset-1 col-md-10">
        <div class="items">
            <h3><%= @genre.name %>一覧(<%= @items.count %>件)</h3>
            <% @items.each do |item| %>
                <div class="item">
        	        <%= link_to item_path(item) do %>
        	            <%= attachment_image_tag(item, :img ,:fill, 150, 150, fallback:"noimg.jpg", size: "250x250") %><br>
        	            <%= item.name %>
        	            <%= item.price %>円
        	        <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>