

<!-- 真ん中にback-groundimage -->

<div class="container">
	<%= render 'shared/genre'%>
		<div class="col-md-10　col-md-offset-3">


			<div class="text-right">
					<div>
						<h4><%=@item.name%>です</h4>
					</div>
					<div class="col-md-5">
						<td><%=attachment_image_tag(@item,:img,:fill,50,50,fallback:"noimg.jpg",size:"150x150") %></td>
				 　　</div>
					<div class="col-md-5 col-md-offsite-3">
						<%=@item.explanation%>
				 　　</div>
				 <div>
				 	<h4>¥<%=@item.price%><small>(税込)</small></h4>
				 </div>
	         </div>
		　　　<div class="text-right">
					<input type="text" name="a" list="cake" placeholder="個数選択" autocomplete="off" class="prymary">
						<datalist id="cake">
						    <option value="1個">
				　　　　　   <option value="2個">
					        <option value="3個">
					       	<option value="4個">
					        <option value="5個">
					    </datalist>
				    <INPUT type="submit" value="カートに入れる">
			　</div>
			　<%= button_to("カートに入れる", cart_item_path(@item.id), method: :post) %>
	　　</div>
</div>


<%= form_for(@cart_item,url:cart_item_path(@item.id), html: {method: :post}) do |f| %>

	 <div class="dropdown">quantity
			  <%= f.label :quantity, "個" %>
	           <%= f.select :quantity, [["1個",1],["2個",2],["3個",3],["4個",4],["5個",5],["6個",6],["7個",7],["8個",8],["9個",9 ]] ,include_blank: "選択して下さい" %>
	           <%= f.submit "カートに入れる" %>
     </div>
<%end%>