
<div class="container">
	<div class="row">
		<%= render 'shared/genre'%>
		 <div class="col-offset-1 col-md-9">
				<!--	unless genre_serch?-->
		<div class="items">
			<h3>商品一覧(全<%= @item.count %>件)</h3>
	        　　<% @items.each do |item| %>
	            <div class="item">
			       <%= link_to item_path(item) do %>
				     <%=attachment_image_tag(item,:img ,:fill,150,150,fallback:"noimg.jpg",size:"200x200") %><br>
				     <%= item.name %>
				     <%= item.price %>円
				     <% end %>
		         </div>
	           <%end%>
	    </div>
	</div>
</div>
<%= paginate @items %>

