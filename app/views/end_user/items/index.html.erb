<div class="row">
	<div class="col-md-2">
		<div class="bg-white radius genre-index pd-20">
			<%= render 'shared/genre'%>
		</div>
		<div class="items_search">
    		<%= form_tag(search_path, method: :get) do %>
        		<label>商品名検索<%= text_field_tag(:search) %><%= submit_tag "検索", class: "search-btn" %></label>
    		<% end %>
		</div>
	</div>
	
	 <div class="col-offset-1 col-md-9 bg-white radius">
			<!--	unless genre_serch?-->
		<h3>商品一覧(全<%= @items.count %>件)</h3>
		<div class="items">
	            <% @items.each do |item| %>
	            <div class="item">
			       <%= link_to item_path(item) do %>
				     <%=attachment_image_tag(item,:img ,:fill,150,150,fallback:"noimg.jpg",size:"250x250") %><br>
				     <%= item.name %>
				     <%= item.price %>円
				     <% end %>
		         </div>
	           <%end%>
	    </div>
	</div>
</div>
<div class="col-md-offset-10">
	<%= paginate @items %>
</div>

