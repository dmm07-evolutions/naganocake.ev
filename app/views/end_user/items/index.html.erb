
<div class="container">
	<div class="row">
		<%= render 'shared/genre'%>
		 <div class="col-offset-1 col-md-9">
				<!--	unless genre_serch?-->
			<h3>商品一覧(全件)</h3>
	        　　<% @items.each do |item| %>
	            	<table class="table table-hover table-inverse flex_test-box">
	                 <tbody class="flex_test-item">
	                     <tr class="text-center">
	                     	<td><%=attachment_image_tag(item,:img,:fill,70,70,fallback:"noimg.jpg",size:"70x70") %></td>
	                     </tr>
	                     <tr>
	                         <td><%= link_to item.name, item_path(item.id) %>
	                         ¥<%= item.price %></td>
	                     </tr>
	                  </tbody>
	                </table>
	            <%end%>
	    </div>
	</div>
</div>

